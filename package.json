{
	"name": "refactorerl-visualizer",
	"description": "Visualiser for RefactorErl",
	"version": "0.0.1",
	"publisher": "robert-fiko",
	"private": true,
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/robertfiko/refactorerl-visualiser"
	},
	"engines": {
		"vscode": "^1.47.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onView:variableOrigin",
		"onView:referlDashboard",
		"onCommand:refactorErl.start",
		"onCommand:refactorErl.query",
		"onCommand:refactorErl.doRefactor",
		"onWebviewPanel:refactorErl"
		
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "refactorErl.start",
				"title": "RefactorErl Visualizer",
				"category": "RefactorErl"
			},
			{
				"command": "refactorErl.doRefactor",
				"title": "Do some refactoring",
				"category": "RefactorErl"
			},
			{
				"command": "refactorErl.query",
				"title": "Custom Query",
				"category": "RefactorErl"
			}
	
		],
		"viewsContainers": {
			"activitybar": [
				{
					"id": "refactorerl",
					"title": "RefactorErl",
					"icon": "media/refactorerl-logo.svg"
				}
			]
		},
		"views": {
			"refactorerl": [
				{
					"id": "referlDashboard",
					"name": "RefactorErl dashboard",
					"icon": "media/dep.svg",
					"contextualTitle": "RefactorErl"
				},
				{
					"id": "variableOrigin",
					"name": "Variable Origin"
				},
				{
					"id": "customQuery",
					"name": "Custom Query"
				}
			]
		},
		"viewsWelcome": [
			{
				"view": "referlDashboard",
				"contents": "RefactorErl: ðŸŸ¢  Online",
				"when": "refactorErl.nodeReachable"
			},
			{
				"view": "referlDashboard",
				"contents": "RefactorErl: ðŸ”´  Not reachable \n RefactorErl is using WebSocket, to deliver content. It seems the connection is down. \n[Try again](command:refactorErl.checkWebSocket)",
				"when": "!refactorErl.nodeReachable"
			},
			{
				"view": "variableOrigin",
				"contents": "Try setting to coursor into a varialbe and use the Code Action (small lamps) to execute. \n\n The result will appear here.",
				"when": "!refactorErl.treeViewActive"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint . --ext .ts,.tsx",
		"watch": "tsc -w -p ./"
	},
	"devDependencies": {
		"@types/node": "^12.12.0",
		"@types/vscode": "^1.47.0",
		"@types/vscode-webview": "^1.57.0",
		"@types/ws": "^8.5.3",
		"@typescript-eslint/eslint-plugin": "^4.16.0",
		"@typescript-eslint/parser": "^4.16.0",
		"eslint": "^7.21.0",
		"typescript": "^4.5.5"
	},
	"dependencies": {
		"ws": "^8.5.0"
	}
}

